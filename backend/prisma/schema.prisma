generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())

  teacher Teacher?
  student Student?
}

model Teacher {
  id        Int       @id @default(autoincrement())
  userId    Int       @unique
  user      User      @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
  classes   Class[]
  subjects  Subject[]
}

model Student {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  class     Class?   @relation(fields: [classId], references: [id])
  classId   Int?
}

model Class {
  id        Int      @id @default(autoincrement())
  name      String
  section   String?
  createdAt DateTime @default(now())

  student  Student[]
  teacher  Teacher[]
  subjects Subject[]
}

model Subject {
  id        Int      @id @default(autoincrement())
  name      String
  classId   Int
  teacherId Int
  createdAt DateTime @default(now())

  class   Class   @relation(fields: [classId], references: [id])
  teacher Teacher @relation(fields: [teacherId], references: [id])
}
